<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MuslimSurvivalKit.View.Download.AudioDownloadPage">
    <ContentPage.Content>
        <ScrollView Padding="20">
            <StackLayout>
                <Label 
                    Text="{Binding StatusText}" 
                    TextColor="{StaticResource PrimaryText}" 
                    HorizontalTextAlignment="Center" />

                <Button Text="Download Mishary Al Afasy Ayahs" Command="{Binding DownloadAyahsCommand}"/>
                <Button Text="Download Mishary Al Afasy All" Command="{Binding DownloadAllCommand}"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>